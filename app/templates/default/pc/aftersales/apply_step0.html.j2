{% extends '/default/pc/layout/base.html.j2' %}


{% block head %}
<title>{{_('申请售后服务-选择产品 - 一店')}}</title>
<link rel="stylesheet" href="/static/default/pc/css/order.css">
<link rel="stylesheet" href="/static/default/pc/css/index.css">
<link rel="stylesheet" href="/static/default/pc/css/aftersales.css">
{% endblock %}

{% block body %}
<div class="index_wrap clearfix">
  <div class="type-head">
    <div class="head-inner">
      <p class="type-head_text">
        <span>{{_('申请售后服务')}}</span>
      </p>
    </div>
  </div>
  <div class="user-main">
    <div class="head-inner clearfix">
      {%include 'default/pc/layout/nav_left.html.j2'%}
      <div class="order-wrap">
        <div class="allPad">
          <div class="order-detail_bd">
            <div class="order-summary">
                <div class="order-progress">
                  <!-- 申请售后服务进度条 -->
                  <ul class="progress-list clearfix">
                    <li class="step step-first step-active">{{_('选择产品和服务')}}</li>
                    <li class="step">{{_('填写申请单')}}</li>
                    <li class="step step-last">{{_('完成申请')}}</li>
                  </ul>
                  <!-- 申请售后服务进度条 end -->
                </div>
              </div>
              <div class="goods-section_box">
                <div class="choice-goods">
                  <p class="choice-goods_title">选择订单中的商品</p>
                </div>
                <ul class="all-list clearfix">
                  <li class="list-item2">
                    <div class="item-product">
                      <img src="http://i1.mifile.cn/a1/pms_1522666970.27937468!200x200.jpg" alt="">
                    </div>
                    <div class="item-detail">
                      <div class="all-title">小米AI音箱</div>
                      <div class="greyGap mar-top">数量 x2</div>
                    </div>
                    <!-- 未申请的商品，此按钮显示 -->
                    <div class="review-btn_wrap" data-value="">
                      <a class="review-btn_link btn-primary" href="{{ url_for('pc.aftersales.apply_step1') }}">{{_('申请售后')}}</a>
                    </div>
                    <!-- 未申请的商品，此按钮显示 end -->
                
                    <!-- 已申请的商品，此按钮显示 -->
                    <!-- <div class="review-btn_wrap" data-value="">
                      <a class="review-btn_link" href="{{ url_for('pc.aftersales.detail', aftersales_id=47) }}">{{_('售后受理中')}}</a>
                    </div> -->
                    <!-- 已申请的商品，此按钮显示 end -->
                  </li>
                  <li class="list-item2">
                    <div class="item-product">
                      <img src="http://i1.mifile.cn/a1/pms_1522666970.27937468!200x200.jpg" alt="">
                    </div>
                    <div class="item-detail">
                      <div class="all-title">小米AI音箱</div>
                      <div class="greyGap mar-top">数量 x1</div>
                    </div>
                    <!-- 未申请的商品，此按钮显示 -->
                    <!-- <div class="review-btn_wrap" data-value="">
                      <a class="review-btn_link btn-primary" href="{{ url_for('pc.aftersales.apply_step1') }}">{{_('申请售后')}}</a>
                    </div> -->
                    <!-- 未申请的商品，此按钮显示 end -->
                
                    <!-- 已申请的商品，此按钮显示 -->
                    <div class="review-btn_wrap" data-value="">
                      <a class="review-btn_link" href="{{ url_for('pc.aftersales.detail', aftersales_id=47) }}">{{_('售后受理中')}}</a>
                    </div>
                    <!-- 已申请的商品，此按钮显示 end -->
                  </li>
                </ul>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block script %}
<script type="text/javascript"></script>
{% endblock%}