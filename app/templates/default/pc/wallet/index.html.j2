{% extends '/default/pc/layout/base.html.j2' %}


{% block head %}
<title>{{_('我的钱包 - 一店')}}</title>
<link rel="stylesheet" href="/static/default/pc/css/order.css">
<link rel="stylesheet" href="/static/default/pc/css/cart.css">
<link rel="stylesheet" href="/static/default/pc/iconfont/iconfont.css">
{% endblock %}

{% block body %}
<div class="index_wrap clearfix">
  <div class="type-head">
    <div class="head-inner">
      <p class="type-head_text">
        <span>{{_('我的钱包')}}</span>
      </p>
    </div>
    <div class="user-main">
      <div class="head-inner clearfix">
        {%include 'default/pc/layout/nav_left.html.j2'%}
        <div class="order-wrap">
          <div class="allPad">
            <div class="cash-overall clearfix">
              <div class="balance">
                {{_('可用余额：')}}￥
                <span class="balance-num">99.00</span>
              </div>
              <a class="recharge" href="{{ url_for('pc.wallet.recharge') }}">
                <img src="/static/default/pc/img/recharge.png" alt="">
                <span>{{_('充值')}}</span>
              </a>
            </div>
            <!-- 有流水记录 -->
            <div class="order-bd">
              <div class="order-box">
                <ul class="order-box_list">
                  <li class="order-box_item">
                    <div class="one-cell" style="padding: 25px !important;">
                      <div class="one-cell_bd">
                        <p class="order-type">余额支付</p>
                        <p class="transaction-add">2018-08-06 19:51:56</p>
                      </div>
                      <div class="one-cell_ft mar-left">
                        <p class="fundsChu">-11.0</p>
                        <button class="transaction-btn" type="button" onclick="detail()">交易明细详情</button>
                      </div>
                    </div>
                    <div class="transaction-detail hide">
                      <div class="order-detail_item">
                        <label class="detail-label">出账金额:</label>
                        <div class="detail-cnt">-11.0</div>
                      </div>
                      <div class="order-detail_item">
                        <label class="detail-label">{{_('类型:')}}</label>
                        <div class="detail-cnt">余额支付</div>
                      </div>
                      <div class="order-detail_item">
                        <label class="detail-label">{{_('时间:')}}</label>
                        <div class="detail-cnt">2018-08-06 19:51:56</div>
                      </div>
                    </div>
                  </li>
                  <li class="order-box_item">
                    <div class="one-cell" style="padding: 25px !important;">
                      <div class="one-cell_bd">
                        <p class="order-type">订单退款</p>
                        <p class="transaction-add">2018-08-06 19:51:56</p>
                      </div>
                      <div class="one-cell_ft mar-left">
                        <p class="fundsRu">+99.0</p>
                        <button class="transaction-btn" type="button" onclick="detail()">交易明细详情</button>
                      </div>
                    </div>
                    <div class="transaction-detail hide">
                      <div class="order-detail_item">
                        <label class="detail-label">入账金额:</label>
                        <div class="detail-cnt">99.0</div>
                      </div>
                      <div class="order-detail_item">
                        <label class="detail-label">{{_('类型:')}}</label>
                        <div class="detail-cnt">订单退款</div>
                      </div>
                      <div class="order-detail_item">
                        <label class="detail-label">{{_('时间:')}}</label>
                        <div class="detail-cnt">2018-08-02 19:51:56</div>
                      </div>
                    </div>
                  </li>
                </ul>
              </div>
              <div class="page-box">
                <span class="page-num page-first">
                  <i class="icon-xiaoyu"></i>
                </span>
                <span class="page-num btn-current">1</span>
                <a href="" class="page-num">2</a>
                <a href="" class="page-num">3</a>
                <a href="" class="page-num">4</a>
                <a href="" class="page-num">5</a>
                <a href="" class="page-num">6</a>
                <span class="page-more">...</span>
                <a href="" class="page-num">12</a>
                <a href="" class="page-num page-last">
                  <i class="icon-dayu"></i>
                </a>
              </div>
            </div>
            <!-- 有流水记录 end -->

            <!-- 没有流水记录 -->
            <!-- <div class="not-one">
              <p class="not-one_text" style="margin-top: 30px !important;">{{_('暂时没有流水记录!')}}</p>
            </div> -->
            <!-- 没有流水记录 end -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block script %}
<script type="text/javascript">
// 点击收起或显示交易明细详情
function detail(fd_id) {
  if ($('.transaction-detail').hasClass('hide')) {
    $('.transaction-detail').addClass('show').removeClass('hide');
  } else {
    $('.transaction-detail').addClass('hide').removeClass('show');
  }
}
</script>
{% endblock%}