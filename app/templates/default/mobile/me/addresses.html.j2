{% extends '/default/mobile/layout/base.html.j2' %} 

{% block head %}
<title>{{_('收货地址管理 - 一店')}}</title>
<link rel="stylesheet" href="/static/default/mobile/css/user.css"> 
{% endblock %} 

{% block body %}
<div class="user_wrap">
  {% if addresses %}
    <div class="weui-cells weui-cells_form">
      {% for address in addresses %}
        <div class="weui-cell">
          <div class="weui-cell__bd">
            <span class="all_title">{{ address.name }}</span>
            <span class="phone_num mar-left">{{ address.mobile }}</span>
            <div class="address">
              {% if address.is_default == 1 %}
                <span class="add_tag">{{_('[默认]')}}</span>
              {% endif %}
              <span>{{ address.province }} {{ address.city }} {{ address.district }} {{ address.address }}</span>
            </div>
          </div>
          <div class="weui-cell__ft mar-left width46">
            <a class="edit" href="{{ url_for('mobile.me.address', ua_id=address.ua_id) }}">{{_('编辑')}}</a>
          </div>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <div class="not-product">
      <div class="not-product_img">
        <img class="notproduct" src="/static/default/mobile/img/notaddress.png" alt="">
      </div>
      <div class="not-product_text">{{_('您暂无收货地址，请添加')}}</div>
    </div>
  {% endif %}
  <div style="height:75px"></div>
  <div class="footer" style="display:block;height:65px">
    <a href="{{ url_for('mobile.me.address', ua_id=0) }}" class="weui-cell weui-cell_access" style="padding:10px">
      <button type="button" class="weui-btn weui-btn_red">{{_('添加收货地址')}}</button>
    </a>
  </div>
</div>
{% endblock %} 

{% block script %}
<script type="text/javascript">
function edit(){
  var url = "/mobile/user/add";
  window.location.href = url;
}
</script>
{% endblock %}