{% extends '/default/mobile/layout/base.html.j2' %} 

{% block head %}
<title>{{_('未付款修改地址 - 一店')}}</title>
<link rel="stylesheet" href="/static/default/mobile/css/user.css"> 
{% endblock %} 

{% block body %}
<div class="user_wrap">
  <div class="weui-cells weui-cells_form">
    <div class="weui-cell">
      <div class="weui-cell__bd">
        <input id="edit_address_name" class="weui-input greykGap" type="text" placeholder="{{_('请填写收件人姓名')}}">
      </div>
    </div>
    <div class="weui-cell">
      <div class="weui-cell__bd">
        <input id="edit_address_mobile" class="weui-input greykGap" type="text" placeholder="{{_('请填写收件人手机号码')}}">
      </div>
    </div>
    <div class="weui-cell weui-cell_select weui-cell_select-after">
      <div class="weui-cell__bd">
        <input id='edit_address_pcd' class="weui-input greykGap" type="text" placeholder="{{_('请选择收件地区')}}">
      </div>
    </div>
    <div class="weui-cell">
      <div class="weui-cell__bd">
        <input id="edit_address_address" class="weui-input greykGap" type="text" placeholder="{{_('请填写详细地址：如街道、道路、门牌号等')}}">
      </div>
    </div>
  </div>
  <div class="reg_btn">
    <button type="button" class="weui-btn weui-btn_red" onClick="save()">{{_('保存')}}</button>
  </div>
  <div class="reg_btn">
    <button type="button" class="weui-btn weui-btn_c" onClick="remove()">{{_('取消')}}</button>
  </div>
</div>
{% endblock %} 

{% block script %}
<script src="https://cdn.bootcss.com/jquery-weui/1.2.0/js/city-picker.min.js" type="text/javascript" charset="utf-8"></script>
<script src="/static/default/mobile/js/jquery.ui.widget.js" type="text/javascript"></script>
<script src="/static/default/mobile/js/jquery.fileupload.js" type="text/javascript"></script>
<script type="text/javascript">

$(document).ready(function(){
  $("#edit_address_pcd").cityPicker({
    title: "请选择所在地"
  });
});
</script>
{% endblock %}