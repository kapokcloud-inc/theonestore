{% extends '/default/mobile/layout/base.html.j2' %}

{% block head %}
<title>{{_('售后服务流水跟踪- 一店')}}</title>
<link rel="stylesheet" href="/static/default/mobile/css/user.css">
{% endblock %}

{% block body %}
<div class="user_wrap">
  <ul class="weui-cells weui-cells_form">
    <div class="logistics_state">{{_('流水跟踪')}}</div>
    {% for log in logs %}
      {% set cur = 'cur' if loop.last else '' %}
      <li class="track_shipflow {{ cur }}">
        <div class="logistics_step">
          <i class="type_dot"></i>
        </div>
        <div class="flex">
          <div class="weui-cell">
            <div class="weui-cell__bd">
              <p class="balckGap">{{ log.content }}</p>
              <p class="all_time">{{ log.add_time|timestamp2str }}</p>
            </div>
          </div>
        </div>
      </li>
    {% endfor %}
  </ul>
</div>
{% endblock %}

{% block script %}
<script type="text/javascript"></script>
{% endblock %}