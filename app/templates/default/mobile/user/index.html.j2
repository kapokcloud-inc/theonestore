{% extends '/default/mobile/layout/base.html.j2' %}
{% import '/default/mobile/libs/libs.html.j2' as libs %}

{% block head %}
<title>{{_('个人中心 - 一店')}}</title>
<link rel="stylesheet" href="/static/default/mobile/css/user.css"> 
{% endblock %} 

{% block body %}
<div class="user_wrap">
  <div class="weui-cells weui-cells_form">
    <a class="weui-cell weui-cell_access" href="{{ url_for('mobile.user.info') }}">
      <div class="weui-cell__hd avatar mar-right">
        <img src="" alt="">
      </div>
      <div class="weui-cell__bd">用户名</div>
      <div class="weui-cell__ft">修改</div>
    </a>
  </div>
  <div class="user_all_order_wrap">
    <div class="weui-cells weui-cells_form">
      <a class="weui-cell weui-cell_access" href="{{ url_for('mobile.user.order') }}">
        <div class="weui-cell__bd">我的订单</div>
        <div class="weui-cell__ft">我的所有订单</div>
      </a>
      <ul class="order_status">
        <li class="flex pstR">
          <a href="{{ url_for('mobile.user.order') }}">
            <span class="weui-badge">2</span>
            <div class="icom_photo">
              <img src="/static/default/mobile/img/pay.png" alt="">
            </div>
            <p class="foot_text">待付款</p>
          </a>
        </li>
        <li class="flex pstR">
          <a href="{{ url_for('mobile.user.order') }}">
            <span class="weui-badge">1</span>
            <div class="icom_photo">
              <img src="/static/default/mobile/img/deliver.png" alt="">
            </div>
            <p class="foot_text">待收货</p>
          </a>
        </li>
        <li class="flex pstR">
          <a href="{{ url_for('mobile.user.order') }}">
            <span class="weui-badge">3</span>
            <div class="icom_photo">
              <img src="/static/default/mobile/img/comment.png" alt="">
            </div>
            <p class="foot_text">待评价</p>
          </a>
        </li>
        <li class="flex pstR">
          <a href="{{ url_for('mobile.user.order') }}">
            <span class="weui-badge">1</span>
            <div class="icom_photo">
              <img src="/static/default/mobile/img/aftersale.png" alt="">
            </div>
            <p class="foot_text">退款/售后</p>
          </a>
        </li>
      </ul>
    </div>
  </div>
  <div class="weui-cells weui-cells_form">
    <a class="weui-cell weui-cell_access" href="{{ url_for('mobile.user.coupon') }}">
      <div class="weui-cell__hd">
        <img src="" alt="">
      </div>
      <div class="weui-cell__bd">优惠券</div>
      <div class="weui-cell__ft">3张</div>
    </a>
    <a class="weui-cell weui-cell_access" href="">
      <div class="weui-cell__hd">
        <img src="" alt="">
      </div>
      <div class="weui-cell__bd">钱包</div>
      <div class="weui-cell__ft">199元</div>
    </a>
    <a class="weui-cell weui-cell_access" href="{{ url_for('mobile.user.collect') }}">
      <div class="weui-cell__hd">
        <img src="" alt="">
      </div>
      <div class="weui-cell__bd">收藏</div>
      <div class="weui-cell__ft"></div>
    </a>
    <a class="weui-cell weui-cell_access" href="{{ url_for('mobile.user.messages') }}">
      <div class="weui-cell__hd">
        <img src="" alt="">
      </div>
      <div class="weui-cell__bd">消息</div>
      <div class="weui-cell__ft">未读1条</div>
    </a>
  </div>
  <div class="weui-cells weui-cells_form">
    <a class="weui-cell weui-cell_access" href="">
      <div class="weui-cell__hd">
        <img src="" alt="">
      </div>
      <div class="weui-cell__bd">邀请好友</div>
      <div class="weui-cell__ft">邀请新用户送50元</div>
    </a>
    <a class="weui-cell weui-cell_access" href="">
      <div class="weui-cell__hd">
        <img src="" alt="">
      </div>
      <div class="weui-cell__bd">关于一店</div>
      <div class="weui-cell__ft"></div>
    </a>
    <a class="weui-cell weui-cell_access" href="{{ url_for('mobile.user.address') }}">
      <div class="weui-cell__hd">
        <img src="" alt="">
      </div>
      <div class="weui-cell__bd">地址管理</div>
      <div class="weui-cell__ft"></div>
    </a>
  </div>
  <div class="reg_btn">
    <a href="">
      <button type="button" class="weui-btn weui-btn_red">退出登录</button>
    </a>
  </div>

  {{ libs.bottom_navigation_bar() }}
</div>
{% endblock %}

{% block script %}
<script type="text/javascript"></script>
{% endblock %}