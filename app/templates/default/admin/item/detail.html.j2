{% extends '/default/admin/layout/base.html.j2' %}
{% import '/default/admin/libs/libs.html.j2' as libs %}

{% block body %}
<div id="page-wrapper">
  {% set breadcrumbs = [{'title':_('商品'), 'href':url_for('admin.item.index')}, {'title':g.page_title, 'href':""}] %}
  {{ libs.breadcrumbs(breadcrumbs) }}
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="white-box">
          <ul class="nav customtab nav-tabs" role="tablist">
            <li role="presentation" class="active">
              <a href="javascript:;">
                <span class="visible-xs">{{_('基本信息')}}</span>
                <span class="hidden-xs">{{_('基本信息')}}</span>
              </a>
            </li>
            <li role="presentation">
              {% set href = url_for('admin.item.h5', goods_id=item.goods_id) if item.goods_id else 'javascript:;' %}
              {% set style = '' if item.goods_id else 'cursor:not-allowed' %}
              <a href="{{ href }}" style="{{ style }}">
                <span class="visible-xs">{{_('详情')}}</span>
                <span class="hidden-xs">{{_('详情')}}</span>
              </a>
            </li>
            <li role="presentation">
              {% set href = url_for('admin.item.galleries', goods_id=item.goods_id) if item.goods_id else 'javascript:;' %}
              {% set style = '' if item.goods_id else 'cursor:not-allowed' %}
              <a href="{{ href }}" style="{{ style }}">
                <span class="visible-xs">{{_('相册')}}</span>
                <span class="hidden-xs">{{_('相册')}}</span>
              </a>
            </li>
          </ul>
          <div class="tab-content">
            <div role="tabpanel" class="tab-pane fade active in" id="home1">
              <form action="{{ url_for('admin.item.save') }}" method="POST">
                <div class="row">
                  {{ libs.wtf_input(wtf_form.goods_name, _('商品名称'), _value=item.goods_name, _class="form-control") }}
                  {{ libs.wtf_input(wtf_form.stock_quantity, _('库存数量'), _value=item.stock_quantity, _class="form-control") }}
                </div>
                <div class="row">
                  {{ libs.wtf_input(wtf_form.goods_price, _('商品金额'), _value=item.goods_price, _class="form-control") }}
                  {{ libs.wtf_input(wtf_form.market_price, _('市场价格'), _value=item.market_price, _class="form-control") }}
                </div>
                <div class="row">
                  {{ libs.wtf_select(wtf_form.cat_id, _('分类'), _class="form-control") }}
                  {{ libs.wtf_select(wtf_form.is_sale, _('是否在售'), _class="form-control") }}
                </div>
                <div class="row">
                  {{ libs.wtf_select(wtf_form.is_hot, _('是否热门商品'), _class="form-control") }}
                  {{ libs.wtf_select(wtf_form.is_recommend, _('是否推荐'), _class="form-control") }}
                </div>
                <div class="row">
                  {{ libs.wtf_textarea(wtf_form.goods_desc, _('商品简介'), _class="form-control") }}
                </div>
                {% set goods_id = item.goods_id if item.goods_id else 0 %}
                {{ libs.wtf_input(wtf_form.goods_id, '', _value=goods_id, _type="hidden") }}
                {{ wtf_form.csrf_token }}
                {{ libs.wtf_submit() }}
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}