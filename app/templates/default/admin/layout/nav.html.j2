<!-- Left Sidebar - style you can find in sidebar.scss  -->
<div class="navbar-default sidebar" role="navigation">
  <div class="sidebar-nav slimscrollsidebar">
    <div class="sidebar-head">
      <h3>
        <span class="fa-fw open-close">
          <i class="ti-close ti-menu"></i>
        </span>
        <span class="hide-menu">Navigation</span>
      </h3>
    </div>
    <div class="user-profile"></div>
    <ul class="nav" id="side-menu">
      {% set _view = request.path.split('/')[2] %}
      {%
        set menu_list = [
                          {'title':_('管理员'), 'href':url_for('admin.auth.index'), 'view':'auth'},
                          {'title':_('配置项'), 'href':url_for('admin.config.sms_yunpian'), 'view':'config'},
                        ]
      %}
      {% for menu in menu_list %}
        <li>
          {% set is_active = 'active' if menu['view'] == _view else '' %}
          <a href="{{ menu['href'] }}" class="waves-effect {{ is_active }}">
            <i class="mdi mdi-account-card-details fa-fw"></i>
            <span class="hide-menu">{{ menu['title'] }}</span>
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>
<!-- End Left Sidebar -->