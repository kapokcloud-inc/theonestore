{% extends '/default/admin/layout/base.html.j2' %}
{% import '/default/admin/libs/libs.html.j2' as libs %}
{% import '/default/admin/libs/const.html.j2' as const %}

{% block body %}
<div id="page-wrapper">
  {% set breadcrumbs = [{'title':_('文章分类'), 'href':""}] %}
  {% set button = {'title':_('添加文章分类'), 'href':url_for('admin.post.category_create')} %}
  {{ libs.breadcrumbs(breadcrumbs, button) }}
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="white-box">
          <div class="table-responsive">
            <table class="table table-hover product-overview footable" id="myTable">
              <thead>
                <tr>
                  <th>{{_('ID')}}</th>
                  <th>{{_('名称')}}</th>
                  <th>{{_('是否显示')}}</th>
                  <th>{{_('添加时间')}}</th>
                  <th>{{_('操作')}}</th>
                </tr>
              </thead>
              <tbody>
              {% for category in categories %}
                <tr id="category-{{category.cat_id}}">
                  <td>{{ category.cat_id }}</td>
                  <td>{{ category.cat_name }}</td>
                  <td>
                    <span class="label {{ const.YES_OR_NO_LABEL.get(category.is_show, 'label-danger') }} font-weight-100">
                      {{ const.YES_OR_NO.get(category.is_show, _('未知错误')) }}
                    </span>
                  </td>
                  <td>{{ category.add_time|timestamp2str }}</td>
                  <td>
                    <a href="{{ url_for('admin.post.category_detail', cat_id=category.cat_id) }}" class="text-inverse p-r-10" data-toggle="tooltip" title="{{_('编辑')}}">
                      <i class="ti-marker-alt"></i>
                    </a>
                    <a href="javascript:void(0);" class="text-inverse" data-toggle="tooltip" title="{{_('删除')}}" onclick="remove({{ category.cat_id }})">
                      <i class="ti-trash"></i>
                    </a>
                  </td>
                </tr>
              {% endfor %}
              </tbody>
              {{ libs.pagination_html(pagination, 10) }}
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block footer %}
<script type="text/javascript">

function remove(cat_id) {
  swal({
    title: "{{_('确认删除')}}",
    text: "{{_('确认删除分类？')}}",
    type: "warning",
    showCancelButton: true,
    confirmButtonColor: "#DD6B55",
    confirmButtonText: "{{_('删除')}}",
    cancelButtonText: "{{_('取消')}}",
    closeOnConfirm: false
  }, function(){
    $.get("{{ url_for('admin.post.category_remove') }}", {'cat_id':cat_id}, function(json) {
      if (json.ret != 0) {
        swal("{{_('删除失败')}}", json.msg, "error");
        return false;
      }

      $("#category-"+cat_id).remove();
      swal("{{_('删除成功')}}", "", "success");
    });
  });
}
</script>
{% endblock %}
