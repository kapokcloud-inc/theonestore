{% extends '/default/admin/layout/base.html.j2' %}
{% import '/default/admin/libs/libs.html.j2' as libs %}
{% import '/default/admin/libs/const.html.j2' as const %}

{% block body %}
<div id="page-wrapper">
  <div class="container-fluid">
    {{ libs.setting_page_tabs() }}
    <!-- .row -->
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="white-box">
          <h3 class="box-title m-b-0">{{ shipping.shipping_name }}</h3>
          <p class="text-muted m-b-30 font-13">{{ shipping.shipping_desc }}</p>
          
          {{ libs.render_form(form, action=url_for('admin.config.shipping_save')) }}

        </div>
      </div>
    </div>
    <!-- /.row -->
  </div>
</div>
{% endblock %}

{% block footer %}
<script type="text/javascript">
$(document).ready(function(){
  $("#is_free").change(function(){
    var val = $(this).val();

    $("#free_limit_amount").val('0.0');
    $("#shipping_amount").val('0.0');

    val == 1 ? $("#shipping_free").hide() : $("#shipping_free").show();
  });
});
</script>
{% endblock %}

