{% extends '/default/admin/layout/base.html.j2' %}
{% block body %}
<div id="page-wrapper">
  <div class="container-fluid">
    {{ libs.setting_page_tabs() }}

    <!-- .row -->
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="white-box">
          <h3 class="box-title"><a target="_blank" href="https://pay.weixin.qq.com/">{{ _('微信支付') }}</a></h3>
          <p class="text-muted m-b-30">
            {{ _('微信支付 - 中国领先的第三方支付平台') }}
          </p>

          {{ libs.build_tabs(tabs=[
            {'label':_('微信公众号'), 'endpoint':'admin.config.mp'},
            {'label':_('微信支付'), 'endpoint':'admin.config.weixinpay'},
            {'label':_('微信开放平台'), 'endpoint':'admin.config.weixinopen'}
          ], border_bottom='line') }}

          {# 微信支付 form表单 #}
          {{ libs.render_form(form, action=url_for('admin.config.weixinpay'), enctype='multipart/form-data', primary_key=form.mch_id.data) }}

        </div>
      </div>
    </div>
    <!-- /.row -->
  </div>
</div>
{% endblock %}