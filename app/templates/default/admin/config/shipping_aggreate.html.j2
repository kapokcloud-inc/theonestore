{% block body %}
<div id="page-wrapper">
  <div class="container-fluid">
    {{ libs.setting_page_tabs() }}

    <!-- .row -->
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="white-box">
          <h3 class="box-title"><a href="https://www.juhe.cn/" target="_blank">{{ _('聚合数据') }}</a></h3>
          <p class="text-muted m-b-30">
            {{ _('一站式数据服务平台，支持大多数快递公司快递查询') }}
          </p>

          {{ libs.build_tabs(tabs=[
            {'label':_('快递100'), 'endpoint':'admin_config.shipping_100'},
            {'label':_('聚合数据'), 'endpoint':'admin_config.shipping_aggreate'},
            {'label':_('快递开通'), 'endpoint':'admin_config.shipping_open',
      'endpoint_list':('admin_config.shipping_open', 'admin_config.shipping_detail')}
