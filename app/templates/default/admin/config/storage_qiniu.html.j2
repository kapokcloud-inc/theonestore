{% extends '/default/admin/layout/base.html.j2' %}
{% import '/default/admin/libs/libs.html.j2' as libs %}

{% block body %}
<div id="page-wrapper">
  <div class="container-fluid">
    {{ libs.setting_page_tabs('storage') }}
    <!-- .row -->
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="white-box">
          <h3 class="box-title">Custom Design Tab</h3>
          <p class="text-muted m-b-30">Use default tab with class
            <code>customtab</code>
          </p>
          <div class="m-b-40">
            <ul class="nav customtab nav-tabs" role="tablist">
              <li role="presentation" class="active">
                <a href="{{ url_for('admin.config.storage_qiniu') }}" aria-controls="alioss" role="tab" aria-expanded="true" style="background:none !important">
                  <span class="visible-xs">{{_('七牛')}}</span>
                  <span class="hidden-xs">{{_('七牛')}}</span>
                </a>
              </li>
              <li role="presentation" class="">
                <a href="{{ url_for('admin.config.storage_alioss') }}" aria-controls="qiniu" role="tab" aria-expanded="false" style="background:none !important">
                  <span class="visible-xs">{{_('阿里')}}</span>
                  <span class="hidden-xs">{{_('阿里')}}</span>
                </a>
              </li>
            </ul>
          </div>
          <form action="{{ url_for('admin.config.storage_qiniu') }}" method="POST">
            <div class="row">
              {{ libs.wtf_input(form.access_key, _('ACCESS KEY'), _value=data.access_key, _class="form-control") }}
              {{ libs.wtf_input(form.secret_key, _('SECRET KEY'), _value=data.secret_key, _class="form-control") }}
            </div>
            <div class="row">
              {{ libs.wtf_input(form.bucket_name, _('存储空间'), _value=data.bucket_name, _class="form-control") }}
              {{ libs.wtf_input(form.cname, _('融合CDN加速域名'), _value=data.cname, _class="form-control") }}
            </div>
            {{ form.csrf_token }}
            {{ libs.wtf_submit() }}
          </form>
        </div>
      </div>
    </div>
    <!-- /.row -->
  </div>
</div>
{% endblock %}