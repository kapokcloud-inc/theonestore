{% extends '/default/admin/layout/base.html.j2' %}
{% block body %}
<div id="page-wrapper">
  <div class="container-fluid">
    {{ libs.setting_page_tabs() }}

    <!-- .row -->
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="white-box">
          <h3 class="box-title"><a target="_blank">{{ _('基本信息') }}</a></h3>
          <p class="text-muted m-b-30">
            {{ _('基本信息配置 - 让用户更了解你的商城') }}
          </p>

           {{ libs.build_tabs(tabs=[
            {'label':_('基本信息'), 'endpoint':'admin.config.weixin_baseinfo'},
            {'label':_('微信公众号'), 'endpoint':'admin.config.mp'},
            {'label':_('微信支付'), 'endpoint':'admin.config.weixinpay'},
            {'label':_('微信开放平台'), 'endpoint':'admin.config.weixinopen'},
            {'label':_('微信小程序'), 'endpoint':'admin.config.weixin_sort'}
          ], border_bottom='line') }}

          {# 售后服务 form表单 #}
          {{ libs.render_form(form, 
              action=url_for('admin.config.weixin_baseinfo'),
              enctype="multipart/form-data",
              primary_key=form.app_name.data)
          }}
        </div>
      </div>
    </div>
    <!-- /.row -->
  </div>
</div>
{% endblock %}