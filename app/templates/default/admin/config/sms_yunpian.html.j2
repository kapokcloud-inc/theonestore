{% extends '/default/admin/layout/base.html.j2' %}
{% import '/default/admin/libs/libs.html.j2' as libs %}

{% block body %}
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row bg-title">
      <ul class="nav customtab nav-tabs" role="tablist" style="border-bottom:none !important">
        <li role="presentation" class="active">
          <a href="{{ url_for('admin.config.sms_yunpian') }}" aria-controls="messages" role="tab" aria-expanded="true" style="background:none !important">
            <span class="visible-xs">{{_('短信')}}</span>
            <span class="hidden-xs">{{_('短信')}}</span>
          </a>
        </li>
        <li role="presentation" class="">
          <a href="{{ url_for('admin.config.storage_qiniu') }}" aria-controls="save" role="tab" aria-expanded="false" style="background:none !important">
            <span class="visible-xs">{{_('存储')}}</span>
            <span class="hidden-xs">{{_('存储')}}</span>
          </a>
        </li>
        <li role="presentation" class="">
          <a href="#messages1" aria-controls="system" role="tab" aria-expanded="false" style="background:none !important">
            <span class="visible-xs">{{_('系统')}}</span>
            <span class="hidden-xs">{{_('系统')}}</span>
          </a>
        </li>
      </ul>
    </div>
    <!-- .row -->
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="white-box">
          <h3 class="box-title">Custom Design Tab</h3>
          <p class="text-muted m-b-30">Use default tab with class
            <code>customtab</code>
          </p>
          <div class="m-b-40">
            <ul class="nav customtab nav-tabs" role="tablist">
              <li role="presentation" class="active">
                <a href="{{ url_for('admin.config.sms_yunpian') }}" aria-controls="yunpian" role="tab" aria-expanded="true" style="background:none !important">
                  <span class="visible-xs">{{_('云片')}}</span>
                  <span class="hidden-xs">{{_('云片')}}</span>
                </a>
              </li>
              <li role="presentation" class="">
                <a href="{{ url_for('admin.config.sms_alisms') }}" aria-controls="alisms" role="tab" aria-expanded="false" style="background:none !important">
                  <span class="visible-xs">{{_('阿里')}}</span>
                  <span class="hidden-xs">{{_('阿里')}}</span>
                </a>
              </li>
            </ul>
          </div>
          <form action="{{ url_for('admin.config.sms_yunpian') }}" method="POST">
            <div class="row">
              {{ libs.wtf_input(form.ak, _('apikey'), _value=data.ak, _class="form-control") }}
              {{ libs.wtf_input(form.app_name, _('前缀'), _value=data.app_name, _class="form-control") }}
            </div>
            {{ form.csrf_token }}
            {{ libs.wtf_submit() }}
          </form>
        </div>
      </div>
    </div>
    <!-- /.row -->
  </div>
</div>
{% endblock %}