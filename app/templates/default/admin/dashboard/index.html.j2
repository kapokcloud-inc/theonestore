                        <span class="time">{{ comment.add_time|timestamp2str }}</span>
                        <span class="label label-rouded {{ const.RATING_TEXT_LABEL.get(comment.rating,'') }}">{{ const.RATING_TEXT.get(comment.rating,'') }}</span>
