                {% for fund_order in funds_orders %}
                  <li>
                  <div class="er-row">
                    <div class="er-pic">
                      <img src="{{ fund_order.avatar|format_avatar }}" alt="varun" width="60" class="img-circle">
                    </div>
                    <div class="er-text">
