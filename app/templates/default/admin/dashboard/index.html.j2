{% block footer %}
<!-- chartist chart -->
<script src="/static/default/admin/plugins/bower_components/chartist-js/dist/chartist.min.js"></script>
<script src="/static/default/admin/plugins/bower_components/chartist-plugin-tooltip-master/dist/chartist-plugin-tooltip.min.js"></script>
<!-- Plugin JavaScript -->
<script src="/static/default/admin/plugins/bower_components/moment/moment.js"></script>
<!-- Date range Plugin JavaScript -->
<script src="/static/default/admin/plugins/bower_components/bootstrap-daterangepicker/daterangepicker.js"></script>
<script type="text/javascript">
$(document).ready(function(){
  // Daterange picker
  $('.input-daterange-datepicker').daterangepicker({
    maxDate: moment(),
    startDate: moment().subtract(6, 'days'),
    endDate: moment(),
    buttonClasses: ['btn', 'btn-sm'],
    format: 'YYYY-MM-DD',
    applyClass: 'btn-success',
    cancelClass: 'btn-info',
    clearClass: 'btn-inverse',
    dateLimit: {
      days: 30
    },
    locale : { 
      applyLabel : '确定', 
      cancelLabel : '取消',
      clearLabel: '清空', 
      fromLabel : '起始时间', 
      toLabel : '结束时间', 
      customRangeLabel : '自定义', 
      daysOfWeek : [ '日', '一', '二', '三', '四', '五', '六' ], 
      monthNames : [ '一月', '二月', '三月', '四月', '五月', '六月', '七月', '八月', '九月', '十月', '十一月', '十二月' ]
    }
  });
  
  getChartlistData()
});

/**
 * 获取图表数据
 */
function getChartlistData() {
  // 查询日期,默认7天内
  let date_range = $("input[name='search_time_daterange']").val()
  if (date_range === '') {
    date_range = moment().subtract(6, 'days').format('YYYY-MM-DD') + ' - ' + moment().format('YYYY-MM-DD')
  }
  $.get('/api/index/chartlist', {'search_time_daterange': date_range}, function(res) {
    if (res.ret != 0) {
      alert(res.msg)
      return
    }
    const chartlist_data = res.data.data || {}
    const date_norms = res.data.date_norms || []
    
    if (date_norms.length <= 0) {
      return
    }
    // 处理数据
    let order_num_list = []
    let pay_amount_list = []
    date_norms.forEach(function (date) {
      const day_data = chartlist_data[date] || null
      if (day_data != null) {
        order_num_list.push(day_data.order_num)
        pay_amount_list.push(parseFloat((day_data.pay_amount / 1000).toFixed(5)))
      } else {
        order_num_list.push(0)
        pay_amount_list.push(0)
      }
    })
    // 页面保存数据
    $("#order_num_list").val(JSON.stringify(order_num_list))
    $("#pay_amount_list").val(JSON.stringify(pay_amount_list))
    $("#date_norm_list").val(JSON.stringify(date_norms))
    switchChartlistData($("#search_type").val())
  })
}

/**
 * 创建线性图表
 * @param data 数据
 * @param type order=订单数(默认) amount=金额
 */
function createChartlist(chartlist_data, chartlist_norm, type) {

  new Chartist.Line('#ct-visits', {
    labels: chartlist_norm,
    series: chartlist_data
    }, {
      fullWidth: false, // 为true时，不绘制最后一条网格线，可能导致最后横坐标文本显示不全
      chartPadding: {
        right: 30
      },
      low: 1,
      stretch: true,
      showPoint: true,
      plugins: [Chartist.plugins.tooltip()],
      lineSmooth: false, // 线条是否平滑
      axisX: { // 横轴属性设置
        offset: 50, // 文本与表之间的间距
        labelOffset: { // 文本偏移位置
          x: -30,
          y: 10
        }
      },
      axisY: {
        onlyInteger: true,
        labelInterpolationFnc: function (value) {
          return type === 'order' ? value : (value + 'k')
        }
      }
    }
  );
 }

/**
 * 切换表数据
 * @param data 数据
 * @param type order=订单数(默认) amount=金额
 */
function switchChartlistData(type) {
  const norms = $("#date_norm_list").val()
  let chartist_data = []
  switch (type) {
    case 'order':
      chartist_data.push([])
      chartist_data.push(JSON.parse($("#order_num_list").val()))
      break
    case 'amount':
      chartist_data.push(JSON.parse($("#pay_amount_list").val()))
      chartist_data.push([])
      break
  }
  $("#search_type").val(type)
  createChartlist(chartist_data, JSON.parse(norms), type)
}
</script>
