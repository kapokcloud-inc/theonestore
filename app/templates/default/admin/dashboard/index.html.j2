                            <a href="{{ img }}" title="" class="image-popup-no-margins">
                              <img src="{{ img|format_avatar(0) }}" width="50" />
                            </a>
                          {% endfor %}
                        </td>
                      </div>
                    </div>
                  </a>
                {% endfor %}
              {% else %}
                <div class="comment-body b-none">
                  <span>{{_('暂无评价记录')}}</span>
                </div>
              {% endif %}
            </div>
        </div>
      </div>
    </div>
